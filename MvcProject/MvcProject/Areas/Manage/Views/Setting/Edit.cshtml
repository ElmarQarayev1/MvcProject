@model Setting
@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Settings</h1>
        
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="Edit" method="post">
                <input type="hidden" asp-for="Key" />
                <div class="form-group">
                    <label for="name">Name</label>
                    <input asp-for="Key" class="form-control" id="name" placeholder=" ">
                    <span class="text-danger" asp-validation-for="Key"></span>
                </div>
                <div class="form-group">
                    <label for="value">Value</label>
                    <input asp-for="Value" class="form-control" id="value" placeholder=" ">
                    <span class="text-danger" asp-validation-for="Value"></span>
                </div>
                <button class="btn btn-primary" type="submit">
                    Edit Setting
                </button>
            </form>
        </div>
    </div>
</div>
@section scripts {
    @Html.Partial("_ValidationScriptPartials");
}
