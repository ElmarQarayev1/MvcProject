@model TestiMony
@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">TestiMonial</h1>
        
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title1Input">FullName</label>
                    <input asp-for="FullName" class="form-control" id="title1Input" placeholder=" ">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label for="title2Input">Description</label>
                    <input asp-for="Desc" class="form-control" id="title2Input" placeholder=" ">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label for="descInput">Position</label>
                    <input asp-for="Position" class="form-control" id="descInput" placeholder=" ">
                    <span class="text-danger" asp-validation-for="Position"></span>
                </div>
                <div class="form-group">
                    <label for="btnUrlInput">Order</label>
                    <input asp-for="Order" class="form-control" id="Order" placeholder=" ">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>


                <div class="form-group">
                    <label for="imgInput">Image</label>
                    <input asp-for="ImageFile" class="form-control imgInput" placeholder=" ">
                    <input type="hidden" name="ImageName" value="@Model.ImgName" />
                    <div class="preview-box">
                        <img width="200" class="previewImg" src="~/uploads/testimonial/@Model.ImgName" />
                    </div>
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <button class="btn btn-primary" type="submit">
                    Edit TestiMonial
                </button>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @Html.Partial("_ValidationScriptPartials");
}