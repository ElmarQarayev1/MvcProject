@inject LayoutService layoutService
@{
    var settings = layoutService.GetSettings();

}
@model Mind
@{

    ViewData["Title"] = "Contact";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>contact</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Contact Start -->
<div class="map-area">

    <div class="google-map-area">
        <!--  Map Section -->
        <div id="contacts" class="map-area">
            <iframe src="@settings["Map"]"
                    height="450px"
                    width="100%"
                    style="border: 0"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</div>
<div class="contact-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="contact-contents text-center">
                    <div class="single-contact mb-65">
                        <div class="contact-icon">
                            <img src="~/img/contact/contact1.png" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>address</h3>
                            <p>@settings["Address"]</p>
                            <p>@settings["City"]</p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                @if (User.Identity.IsAuthenticated && User.IsInRole("member"))
                {
                    <div class="reply-area">
                        <h3>LEAVE A message</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" method="post" asp-action="mindForm" asp-controller="mind">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input asp-for="Subject" id="subject">
                                    <span class="text-danger" asp-validation-for="Subject"></span>
                                    <p>Message</p>
                                    <textarea asp-for="Text" id="message" cols="15" rows="10"></textarea>
                                    <span class="text-danger" asp-validation-for="Text"></span>
                                </div>
                            </div>
                            <button type="submit" class="default-btn">Send Message</button>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                }
                else
                {
                    <div class="reply-area">
                        <h3>LEAVE A message</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" asp-action="mindForm" asp-controller="mind">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input asp-for="Name" id="name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input asp-for="Email" id="email">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input asp-for="Subject" id="subject">
                                    <span class="text-danger" asp-validation-for="Subject"></span>
                                    <p>Message</p>
                                    <textarea asp-for="Text" id="message" cols="15" rows="10"></textarea>
                                    <span class="text-danger" asp-validation-for="Text"></span>
                                </div>
                            </div>
                            <button type="submit" class="default-btn">Send Message</button>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
<!-- Subscribe Start -->
