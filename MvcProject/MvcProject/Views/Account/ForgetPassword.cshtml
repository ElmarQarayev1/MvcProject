
@{
    ViewData["Title"] = "ForgetPassword";
}
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>ForgetPassword</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            @if (TempData["EmailSent"] == null)
                                {

                                <form method="post">
                                    <div class="col-lg-6 mb--20">
                                        <input asp-for="Email" class="mb-0 form-control" type="email" id="email" placeholder="Enter your email">
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>                                
                                    <div class="button-box">                                    
                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                        <button type="submit" class="default-btn">Send Email</button>
                                    </div>
                                </form>
                                }
                          else
                          {
                        <h2 class="text-success">Check your email box to eset password</h2>
                          }
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>