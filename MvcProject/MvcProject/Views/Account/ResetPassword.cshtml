@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset Password</h2>
                            <span>Please enter your new password below.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="login-form">
                                    <h4 class="login-title">Reset Password</h4>
                                    <div class="row">
                                        <div class="col-12 mb--20">
                                            <label for="newPassword">New Password</label>
                                            <input class="mb-0 form-control" asp-for="NewPassword" id="newPassword" placeholder="Enter Your New Password..">
                                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                                        </div>
                                        <div class="col-lg-12 mb--20">
                                            <label for="confirmNewPassword">Confirm New Password</label>
                                            <input asp-for="ConfirmNewPassword" class="mb-0 form-control" type="password" id="confirmNewPassword" placeholder="Confirm Your New Password">
                                            <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
                                        </div>

                                        <input type="hidden" name="Email" value="@TempData["email"]" />
                                        <input type="hidden" name="Token" value="@TempData["token"]" />
                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-outlined">Reset Password</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
