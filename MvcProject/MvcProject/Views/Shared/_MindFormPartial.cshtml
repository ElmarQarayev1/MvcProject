@model Mind
<h2 class="title-lg mb--20 pt--15">Add to mind</h2>
<div class="rating-row pt-2">
    <p class="d-block">Your Mind</p>
   
    <form asp-action="review" id="reviewForm" method="post" class="mt--15 site-form">
        <div class="row">
            <div class="col-12">
               
                <div class="form-group">
                    <label for="mess">Subject</label>
                    <textarea asp-for=Subject id="mess" cols="10" rows="10"
                              class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Subject"></span>
                </div>
                <div class="form-group">
                    <label for="message">Comment</label>
                    <textarea asp-for=Text id="message" cols="30" rows="10"
                              class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Text"></span>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </div>
            <div class="col-lg-4">
                <div class="submit-btn">
                    <button type="submit" class="btn btn-black"> send Mind  </button>
                </div>
            </div>
        </div>
    </form>
</div>a